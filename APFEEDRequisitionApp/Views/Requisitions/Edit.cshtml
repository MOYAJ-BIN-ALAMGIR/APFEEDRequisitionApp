@model APFEEDRequisitionApp.Models.Requisition

@{
    ViewData["Title"] = "Edit Requisition";
}

<h2>Edit Requisition</h2>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">@TempData["SuccessMessage"]</div>
}

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger">@TempData["ErrorMessage"]</div>
}

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="Id" />

    <div class="mb-3">
        <label asp-for="ReferenceNo" class="form-label"></label>
        <input asp-for="ReferenceNo" class="form-control" />
        <span asp-validation-for="ReferenceNo" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="RequisitionDate" class="form-label"></label>
        <input asp-for="RequisitionDate" class="form-control" type="date" value="@Model.RequisitionDate.ToString("yyyy-MM-dd")" />
        <span asp-validation-for="RequisitionDate" class="text-danger"></span>
    </div>


    <div class="mb-3">
        <label asp-for="RequisitionBy" class="form-label"></label>
        <input asp-for="RequisitionBy" class="form-control" />
        <span asp-validation-for="RequisitionBy" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="RequiredItems" class="form-label"></label>
        <input asp-for="RequiredItems" class="form-control" />
        <span asp-validation-for="RequiredItems" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Status" class="form-label"></label>
        <select asp-for="Status" class="form-control">
            <option value="Done">Done</option>
            <option value="Hold">Hold</option>
            <option value="Closed">Closed</option>
            <option value="Cancled">Cancled</option>
            <option value="Pending">Pending</option>
        </select>
    </div>

    <div class="mb-3">
        <label asp-for="CompletedDate" class="form-label"></label>
        <input asp-for="CompletedDate" class="form-control" type="date" value="@(Model.CompletedDate.HasValue? Model.CompletedDate.Value.ToString("yyyy-MM-dd") : "")" />
    </div>

    <div class="mb-3">
        <label asp-for="Remarks" class="form-label"></label>
        <textarea asp-for="Remarks" class="form-control"></textarea>
        <span asp-validation-for="Remarks" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Update</button>
</form>

