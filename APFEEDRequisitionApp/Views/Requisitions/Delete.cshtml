@model APFEEDRequisitionApp.Models.Requisition

@{
    ViewData["Title"] = "Delete Requisition";
}

<h2>Delete Confirmation</h2>

<div class="alert alert-danger">
    Are you sure you want to delete this requisition?
</div>

<dl class="row">
    <dt class="col-sm-3">Reference No</dt>
    <dd class="col-sm-9">@Model.ReferenceNo</dd>

    <dt class="col-sm-3">Required Items</dt>
    <dd class="col-sm-9">@Model.RequiredItems</dd>

    <dt class="col-sm-3">Status</dt>
    <dd class="col-sm-9">@Model.Status</dd>
</dl>

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
