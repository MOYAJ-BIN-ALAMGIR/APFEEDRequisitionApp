@{
    ViewData["Title"] = "Data Input";
}
<h2>Data Input</h2>

@if(ViewBag.Message != null)
{
    <div class= "alert alert-success" role="alert">
        @ViewBag.Message
    </div>
}

<form asp-action="Create" method="post">
    <div class="form-group">
        <label>Reference No</label>
        <input class="form-control" name="ReferenceNo" value="@ViewBag.NextReferenceNo" />
    </div>
    <div class="form-group">
        <label>Requisition Date</label>
        <input class="form-control datepicker" name="RequisitionDate" placeholder="dd/mm/yyyy" />

    </div>
    <div class="form-group">
        <label>Requisition By</label>
        <input class="form-control" name="RequisitionBy" />
    </div>
    <div class="form-group">
        <label>Required Items</label>
        <textarea class="form-control" name="RequiredItems"></textarea>
    </div>
    <div class="form-group">
        <label>Status</label>
        <select class="form-control" name="Status">
            <option>Done</option>
            <option>Hold</option>
            <option>Closed</option>
        </select>
    </div>
    <div class="form-group">
        <label>Completed Date</label>
        <input class="form-control datepicker" name="CompletedDate" placeholder="dd/mm/yyyy" />

    </div>
    <div class="form-group">
        <label>Remarks</label>
        <textarea class="form-control" name="Remarks"></textarea>
    </div>

    <button type="submit" class="btn btn-success">Save</button>
</form>

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.9.0/css/bootstrap-datepicker.min.css" />
<script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.9.0/js/bootstrap-datepicker.min.js"></script>

@section Scripts {
    <script>
        $('.datepicker').datepicker({
            format: 'dd/mm/yyyy',
            autoclose: true
        });
    </script>
}